<!-- Login modal -->
@{
    ViewData["Title"] = "Login";
   
}

<div class="modal fade" id="login_2" tabindex="-1" role="dialog" aria-labelledby="myLogin" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-popup">
            <a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
            
            <form action="@Url.Action("Login","User")" method="post" class="popup-form" id="myLogin">
                <div class="login_icon"><i class="icon_lock_alt"></i></div>

                <input type="text" class="form-control form-white" placeholder="Email" name="name" id="name" required />

                <input type="password" class="form-control form-white" placeholder="Password" name="password" id="password" required>

                <span style="color:red;" id="login-message" class="text-left">
                    @*<a href="#">Forgot Password?</a>*@

                </span>
                <button type="submit" id="login_submit" class="btn btn-submit">Sign in</button>

            </form>

        </div>
    </div>
</div><!-- End modal -->
